@using ClientServer.Shared.Database.Models

<div>
	<div class="card-header	border-bottom-0 p-2">
		<h5 class="card-title mb-0 text-primary">Nome da regra: @Rule.RuleName</h5>
	</div>
	
	<div class="card-body d-flex justify-content-between align-items-center">
		<p class="card-text mb-0">Lista de programas cadastrados na lista</p>
	</div>
	<div style="max-height: 100px ; overflow-y: auto; padding: 0; margin: 0;">
		<ul class="list-group">
			@foreach (var item in Rule.Programs)
			{
				<div class="card" style="margin:2px">
					<div>
						@item.Name
					</div>
				</div>
			}
		</ul>
	</div>

	<div class="card-body d-flex justify-content-between align-items-center">
		<p class="card-text mb-0">Lista de máquinas cadastradas na lista</p>
	</div>
	<div style="max-height: 100px ; overflow-y: auto; padding: 0; margin: 0;">
		<ul class="list-group">
			@foreach (var item in Rule.Workstations)
			{
				<div class="card" style="margin:2px">
					<div>
						@item.Hostname
					</div>
				</div>
			}
		</ul>
	</div>
</div>

@code {
	[Parameter]
	public DbWorkstationSpecificRule Rule { get; set; }
}
