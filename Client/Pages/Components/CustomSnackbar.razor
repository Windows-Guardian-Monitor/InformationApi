@using ClientServer.Client.Operators
@using Microsoft.AspNetCore.Components

@if (SnackbarOperator.IsVisible)
{
	<div class="alert @SnackbarOperator.BannerClass alert-dismissible fade show" role="alert">
		@SnackbarOperator.Message
		<button type="button" class="btn-close" @onclick="Hide" aria-label="Close"></button>
	</div>
}

