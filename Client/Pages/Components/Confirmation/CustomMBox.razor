<div class="modal fade show" tabindex="-1" role="dialog" style="display: block;" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="ConfirmAction">OK</button>
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Confirmação";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private void Close()
    {
        OnCancel.InvokeAsync(null);
    }

    private void ConfirmAction()
    {
        OnConfirm.InvokeAsync(null);
    }
}
